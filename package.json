{
  "name": "myapp",
  "private": true,
  "version": "0.0.1",
  "dependencies": {
    "@hotwired/stimulus": "latest",
    "@hotwired/turbo-rails": "latest",
    "@rails/actioncable": "latest",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "esbuild": "^0.23.0"
  },
  "scripts": {
  "build:app": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --format=esm",
  "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css",
  "build": "npm run build:css && npm run build:app",
  "watch:app": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --format=esm --watch=forever",
  "watch:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch",
  "watch": "npm run watch:css & npm run watch:app"
}
}
