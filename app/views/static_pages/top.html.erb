<% content_for(:title, t('.title')) %>

<%# <style>
  * { outline: 1px solid red; }
</style> %>

<style>
  @keyframes wiggle-x {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(10px);
    }
  }
  .animate-wiggle-x {
    animation: wiggle-x 1.2s ease-in-out infinite;
  }
</style>

<div class="min-h-screen bg-[#F6D6A8] text-[#7A5A3A]">
  <div class="px-6 pt-6">
    <%= render "shared/flash_messages" %>
  </div>

  <section class="px-6 pt-10 pb-8">
    <div class="mx-auto max-w-md text-center">

      <p class="text-2xl tracking-[0.2em] text-[#8C6B4B]">
        無料グループ通話
      </p>

      <div class="mt-4 flex items-center justify-center gap-3">
        <h1 class="text-4xl font-bold tracking-[0.08em]">声友</h1>
      </div>

      <div class="mt-6 rounded-[24px] bg-white/70 shadow-[0_18px_40px_rgba(122,90,58,0.25)]
                  ring-1 ring-white/70 overflow-hidden">
        <%= image_tag "top.png",
          alt: "声友ビジュアル",
          class: "block w-full object-contain" %>
      </div>

      <div class="mt-6 flex items-center justify-center -ml-16 gap-4">
        <div class="flex items-center justify-center gap-3">

          <!-- 指アイコン -->
          <div class="h-10 w-10 animate-wiggle-x">
            <%= image_tag "fingericon.svg",
              class: "block h-full w-full rotate-90" %>
          </div>

          <!-- 始めるボタン -->
          <%= link_to user_sessions_path,
            data: { turbo_method: :post },
            class: "flex items-center justify-center gap-2 rounded-full bg-green-200
                    px-11 py-5 text-[#2F4F3E] shadow-lg ring-1 ring-green-100" do %>
            <span class="text-xl font-semibold">始める</span>
          <% end %>

        </div>
      </div>

    </div>
  </section>

  <%= render "top_description_section" %>
  <%= render "top_how_to_use_section" %>
</div>
</div>
