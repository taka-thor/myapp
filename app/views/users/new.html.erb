<style>
html,
body {
margin: 0;
padding: 0;
height: 100%;
overflow: hidden; /* スクロールを発生させない */
}

/* 画面全体すべての要素に赤いアウトライン（デバッグ用） */
* {
outline: 1px solid red;
}

/* bodycontainer だけ青い枠線 */
.bodycontainer {
outline: 2px solid blue;
}

/* page-container だけ緑の枠線 */
.page-container {
outline: 2px solid green;
}
</style>

<div class="bodycontainer w-full h-screen flex flex-col items-center justify-center">
    <div class="page-container w-[320px] h-[580px] relative flex flex-col">
        <!-- タイトル -->
        <p class="relative  mt-[60px] text-center ">
        <span class="text-[32px]">ニックネームを入力</span>
        </p>

        <!-- 説明テキスト -->
        <div class="relative mt-[40px] text-center text-[24px]">
        <p class="mb-0">黄色の部分を押して入力</p>
        </div>

        <div class="formcontainer mt-[70px]">
        <%= form_with model: @user do |f| %>
            <div class="flex items-center gap-3 pl-4">
                <%= f.text_field :name,
                    placeholder: "ここを押して入力",
                    class: "w-[220px]
                            rounded-md border border-gray-300 px-10 py-3 bg-yellow-200
                            shadow-sm focus:outline-none focus:ring-2
                            focus:ring-indigo-500 focus:border-indigo-500" %>

                <%= f.submit "決定",
                    class: "px-4 py-2 rounded-md border border-indigo-500
                            text-indigo-600 text-lg font-semibold
                            hover:bg-indigo-50 active:bg-indigo-100" %>
            </div>
        <% end %>
        </div>

        <div
        class="w-[60px] h-[70px] max-[360px]:w-[50px] max-[360px]:h-[60px] animate-bounce"
      >
        <%= image_tag "fingericon.svg", class: "block w-full h-full" %>
      </div>

        <!-- 注意テキスト -->
        <div class="absolute left-1/2 top-[350px] -translate-x-1/2 text-center text-[18px] text-[#fb5f5f] ">
        <p class="mb-0">注意</p>
        <p class="mb-0">ニックネームは通話のお相手に表示される</p>
        <p class="mb-0">お名前になります</p>
        </div>
    </div>
</div>
