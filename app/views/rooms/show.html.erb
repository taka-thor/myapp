<%# <style>
  * { outline: 1px solid red; }
</style> %>

<%= turbo_stream_from "for_room_index" %>

<div
  id="presence-hook"
  data-room-id="<%= @room.id %>"
  data-presence-ping-url="<%= ping_room_presence_path(@room) %>"
  data-presence-leave-url="<%= leave_room_presence_path(@room) %>"
></div>

<div class="min-h-screen w-full max-w-[700px] mx-auto flex flex-col">
  <%= render "shared/header" %>

  <main class="flex-1 px-6 pb-10 pt-12 space-y-8">
    <%# --- トピックバー --- %>
    <section>
      <div class="w-full rounded-2xl bg-sky-300/90 px-4 py-3 sm:px-5 sm:py-4 flex items-center justify-between gap-3">
        <%= form_with model: @room, url: room_path(@room), method: :patch,
              data: { turbo: true }, class: "flex items-center gap-3 w-full flex-wrap" do |f| %>

          <%# 変更ボタン（入力を開く） %>
          <button
            type="button"
            id="topic-edit-open"
            class="shrink-0 rounded-xl bg-orange-400 text-white px-2 py-1 sm:px-3 sm:py-1.5
                    text-base sm:text-lg font-semibold hover:opacity-90 active:scale-95 transition"
          >
            変更
          </button>

          <div class="flex-1 min-w-0 text-[20px]">
            <%= render "rooms/topic_index_and_show", room: @room, topic: @room.topic %>
          </div>

          <div id="topic-edit-area" class="hidden w-full basis-full mt-3">
            <%= f.text_field :topic,
                  value: @room.topic,
                  class: "w-full rounded-xl px-3 py-2 text-base",
                  placeholder: "新しい話題" %>

            <div class="mt-2 flex justify-end gap-2">
              <%= f.submit "更新",
                    class: "rounded-xl bg-emerald-500 text-white px-4 py-2 font-semibold hover:opacity-90 active:scale-95 transition",
                    data: { confirm_topic_update: true } %>

              <button
                type="button"
                id="topic-edit-cancel"
                class="rounded-xl bg-slate-200 text-slate-800 px-4 py-2 font-semibold hover:opacity-90 active:scale-95 transition"
              >
                やめる
              </button>
            </div>
          </div>

        <% end %>
      </div>

      <p class="mt-4 text-center text-sm sm:text-base text-slate-700 leading-relaxed">
        「変更」を押すと、話題を変更できます
      </p>
    </section>

    <%= turbo_stream_from @room %>

    <%# --- ユーザーアイコンエリア（最大4人） --- %>
    <section class="space-y-3">
      <h2 class="text-base sm:text-lg font-semibold text-slate-900">
        参加中のメンバー
      </h2>

      <%= render "rooms/participants", room: @room %>
    </section>

    <section class="mt-4">
      <div
        class="w-full max-w-sm mx-auto rounded-2xl bg-red-50
                px-4 py-4 sm:px-5 sm:py-5
                text-center text-red-600 space-y-2 text-sm sm:text-base"
      >
        <p class="font-semibold">
          個人情報に関する会話にご注意ください
        </p>

        <div class="space-y-1">
          <p class="leading-relaxed">
            運営側が個人情報をお聞きすることは
          </p>
          <p class="leading-relaxed font-semibold">
            絶対にありません
          </p>
        </div>
      </div>
    </section>
  </main>
</div>
